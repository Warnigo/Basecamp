    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="image">
            <div class="form-box">
                <form action="/auth/login" method="post" class="form">
                    <h2>Login page</h2>
                    {{#if message}}
                        <h4>{{message}}</h4>
                    {{/if}}
                    <div class="input-box">
                        <input type="text" id="email" name="email">
                        <label for="email">Email</label>
                    </div>
                    <div class="input-box ">
                        <input type="password" id="password" name="password">
                        <label for="password">Password</label>
                    </div>
                    <div class="group">
                        <a href="/register">Register</a>
                    </div>
                    <div class="butoon">    
                        <button type="submit">Sabmit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
